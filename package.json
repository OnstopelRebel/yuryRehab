{
  "name": "sasstemplate",
  "version": "1.0.0",
  "description": "My Own Template",
  "main": "index.js",
  "type": "module",
  "author": "Saenkov Andrey",
  "license": "ISC",
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig & npm run stylelint & eslint source/js/",
    "start": "gulp",
    "build": "gulp --production"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-file-include": "^2.3.0",
    "gulp-postcss": "^9.0.1",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "browser-sync": "^2.27.10",
    "del": "^7.0.0",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssimport": "^7.0.0",
    "gulp-csso": "^4.0.1",
    "gulp-fonter": "^0.3.0",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.8",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sass-glob": "^1.1.0",
    "gulp-shorthand": "^1.1.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-ttf2woff2": "^4.0.1",
    "gulp-webp": "^4.0.1",
    "gulp-webp-css": "^1.1.0",
    "gulp-webp-html": "^1.0.2",
    "sass": "^1.55.0",
    "webpack": "^5.74.0",
    "webpack-stream": "^7.0.0"
  }
}
